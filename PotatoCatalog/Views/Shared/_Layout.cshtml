@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        body {
            background: #FEFEFE !important;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Home/Index" class="navbar-brand"> <img src="http://i.imgur.com/rbCTymt.png?1" alt="potatologo"style="max-height: 65px; margin-top: -5px" /> </a>
                @Html.ActionLink("Potato Games", "Index", "Home", new { area = "" }, new { @class = "navbar-brand hidden-xs" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Shop", "Index", "Catalog")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("My Orders", "PersonalOrderHistory", "Order")</li>
                    }
                    @if (this.User.IsInRole("Admin"))
                    {
                        <li class="dropdown" >
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                Admin Menu
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li>@Html.ActionLink("Order History","OrderHistory", "Order")</li>
                                <li>@Html.ActionLink("Manage Orders", "ManagePendingOrders", "Order")</li>
                                <li >@Html.ActionLink("Create Game", "CreateGame", "Game")</li>
                                <li>@Html.ActionLink("Manage Games", "ManageGames", "Game")</li>
                                <li>
                                    @Html.ActionLink("Manage Tags", "ManageTags", "Tag")
                                </li>
                                <li>
                                    @Html.ActionLink("Manage Editions", "ManageEditions", "Edition")
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container body-content">
    
    @RenderBody()
    <div class=" col-xs-12">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Potato Games</p>
        </footer>
    </div>
</div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Styles", false)
    @RenderSection("Scripts", false)
</body>
</html>
