@model PotatoCatalog.Models.CreateGameEditionViewModel

@using (Html.BeginForm("CreateGameEdition", "GameEdition", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        @Html.HiddenFor(m => m.GameId, new { Value = Model.GameId })
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(t => t.PriceInPotatoes, new {@class = "control-label"})
            @Html.TextBoxFor(t => t.PriceInPotatoes, new {@class = "form-control", id = "namebox"})
            @Html.ValidationMessageFor(t => t.PriceInPotatoes, "", new {@class = "text-danger"})
        </div>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(t => t.Contents, new {@class = "control-label"})
            @Html.TextAreaFor(t => t.Contents, new { @class = "form-control", rows = 8 })
            @Html.ValidationMessageFor(t => t.Contents, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.EditionId, new {@class = "control-label"})
            @Html.DropDownListFor(t => t.EditionId, Model.EditionsList)
            @Html.ValidationMessageFor(t => t.EditionId, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
}