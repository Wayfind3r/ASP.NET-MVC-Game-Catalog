@model PotatoCatalog.Models.EditTagViewModel
@using (Html.BeginForm("EditTag", "Tag", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(t => t.Id)
    <div class="modal-body"  style = "text-align: center">
        <div class="form-group" style = "text-align: center">
            @Html.LabelFor(t => t.Name, new {@class = "control-label", @style = "text-align: center"})
            @Html.TextBoxFor(t => t.Name, new {@class = "form-control", @style = "text-align: center", id = "namebox"})
            @Html.ValidationMessageFor(t => t.Name, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <input class="btn btn-primary" type="submit" value="Save changes" />
    </div>
}
