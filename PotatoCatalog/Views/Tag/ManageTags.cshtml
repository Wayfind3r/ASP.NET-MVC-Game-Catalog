@using PotatoCatalog.Models
@model Tag
@{
    ViewBag.Title = "Manage Tags";
    ViewBag.Message = "Any changes to the tag table will reflect on the tagged items.";
    ViewBag.Message2 = "You can merge tags by editing the name of one tag to be equal to another.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
@*Create jquery+ajax*@
<script type="text/javascript">
        $(document).ready(function() {
            $(document).on('click', '.create', function(e) {
                e.preventDefault();
                var _self = $(this);
                var tagId = _self.data('id');
                $("#edit-modalLabel").text("Create a new Tag");
                var dataUrl = _self.data('url');

                $.ajax({
                    type: 'GET',
                    url: dataUrl,
                    cache: false,
                    success: function(e) {
                        var content = [];
                        content.push(e);

                        $('#manage-modal .modal-data').html(content.join(''));
                        $(_self.attr('href')).modal('show');
                    },
                    error: function() {}
                });
                return;
            });
        });
</script>
    @*Edit jquery+ajax*@
    <script type="text/javascript">
        $(document).ready(function() {
            $(document).on('click', '.edit', function(e) {
                e.preventDefault();
                var _self = $(this);
                var tagId = _self.data('id');
                $("#edit-modalLabel").text("Edit Tag ID: " + tagId);
                var dataUrl = _self.data('url');

                $.ajax({
                    type: 'GET',
                    url: dataUrl,
                    cache: false,
                    success: function(e) {
                        var content = [];
                        content.push(e);

                        $('#manage-modal .modal-data').html(content.join(''));
                        $(_self.attr('href')).modal('show');
                    },
                    error: function() {}
                });
                return;
            });
        });
    </script>
    @*Delete jquery+ajax*@
    <script type="text/javascript">
        $(document).ready(function() {
            $(document).on("click", ".delete", function(e) {
                e.preventDefault();
                var _self = $(this);
                var tagId = _self.data("id");
                $("#edit-modalLabel").text("Delete Tag ID: " + tagId);
                var dataUrl = _self.data("url");

                $.ajax({
                    type: "GET",
                    url: dataUrl,
                    cache: false,
                    success: function(e) {
                        var content = [];
                        content.push(e);

                        $("#manage-modal .modal-data").html(content.join(""));
                        $(_self.attr("href")).modal("show");
                    },
                    error: function() {}
                });
                return;
            });
        });
    </script>
}

<h2>@ViewBag.Title</h2>
<h4>@ViewBag.Message</h4>
<h4>@ViewBag.Message2</h4>
<a class="btn btn-warning create" data-url="@Url.Action("CreateTag","Tag")" href="#manage-modal">Create a new Tag</a>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    <thead />
    <tbody>
        @foreach (var tag in ViewBag.tagList)
        {
            <tr>
                <td>
                    @tag.Name
                </td>
                <td>
                    <a class="btn btn-primary btn-xs delete" data-id="@tag.Id" data-url="@Url.Action("DeleteTag","Tag", new {Id=tag.Id})" href="#manage-modal">delete</a>

                    <a class="btn btn-primary btn-xs edit" data-url="@Url.Action("EditTag","Tag", new {Id=tag.Id})" href="#manage-modal" data-id="@tag.Id">edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade col-md-offset-5 col-md-2" style="margin-top: 50px;" id="manage-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="edit-modalLabel">Tag modal</h4>
        </div>
        <div class="modal-data">

        </div>
    </div>
</div>
